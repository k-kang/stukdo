        <td><%= button_to "Mark as To Do", change_task_path(task, state: "To Do"), method: :put %></td>
        <td><%= button_to "Mark as Done", change_task_path(task, state: "Done"), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

