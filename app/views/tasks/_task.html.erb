	<tr>
		<td><%= task.content %></td>
		<td><%= task.state %></td> 
		<td><%= link_to 'Show', task %></td>
		<td><%= link_to 'Edit', edit_task_path(task) %></td>
		<td><%= button_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>

		<% if task.state == "Doing" %>
		<td><%= button_to "Mark as To Do", change_task_path(task, state: "To Do"), method: :put %></td>
		<td><%= button_to "Mark as To Do", change_task_path(task, state: "Done"), method: :put %></td>
		<% else %>
		<td><%= button_to "Mark as Doing", change_task_path(task, state: "Doing"), method: :put %></td>
		<% end %>
	</tr>